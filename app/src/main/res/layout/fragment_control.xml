<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_control_fragment"
    tools:context=".ControlFragment">

    <ImageView
        android:id="@+id/DeviceIconFragmentControl"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/device"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/DeviceNameFragmentControl"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/DeviceIconFragmentControl"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/devicename_english"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewControlButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/DeviceIconFragmentControl"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:scrollbars="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewControlFader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/RecyclerViewControlButton"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        />




</RelativeLayout>